{
  "name": "@mardotio/generate-environment",
  "version": "0.2.0",
  "author": "mardotio",
  "description": "Verifies specified environment variables are set",
  "license": "MIT",
  "main": "lib",
  "types": "lib",
  "files": [
    "lib/**/*"
  ],
  "repository": "https://github.com/mardotio/generate-environment",
  "scripts": {
    "prepare": "tsc",
    "test": "jest"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.15",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.2"
  }
}
